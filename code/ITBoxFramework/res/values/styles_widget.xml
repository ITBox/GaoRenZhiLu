<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="custom_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/inflate</item>
    </style>
    <style name="text_normal" parent="text_base">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>
    <style name="text_big" parent="text_base">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>
    <style name="text_light" parent="text_base">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/gray_text_light</item>
    </style>
    <style name="text_small" parent="text_light">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="text_label" parent="text_normal">
        <item name="android:layout_width">70dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
    </style>

    <style name="edit_normal" parent="text_normal">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">@dimen/margin_half</item>
        <item name="android:paddingBottom">@dimen/margin_half</item>
        <item name="android:hint">@string/hint_input</item>
    </style>
    
    <style name="cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingTop">@dimen/margin_half</item>
        <item name="android:paddingBottom">@dimen/margin_half</item>
    </style>
</resources>