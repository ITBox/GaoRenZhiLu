<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Splash" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/image_splash</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Translucent_NoTitleBar" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>






	　　                                                <item name="android:windowIsTranslucent">true</item>






	　　                                                <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>

    <!-- Checkbox 样式 -->
    <style name="CheckBOX" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="userInfoItemArrow">
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:src">@drawable/open_icon</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="userInfoItemContent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff888888</item>
        <item name="android:layout_marginLeft">96.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="userInfoItemTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff888888</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>