<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dip"
            android:orientation="horizontal" >

            <com.itbox.fx.widget.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="96dip"
                android:layout_height="96dip"
                android:layout_margin="10dip"
                android:src="@drawable/icon" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="#E95C4A"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/ratingbar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_jobtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="张三"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_teachertype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dip"
                        android:text="张三"
                        android:textColor="#A3A7AA"
                        android:textSize="16sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_teacher_description"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="哈哈哈哈哈"
                    android:textColor="#A3A7AA"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_buy_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="#A3A7AA"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_answer_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="张三"
                        android:textColor="#A3A7AA"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#E7E7E7"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:text="设置购买信息"
        android:textColor="#838383"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/nick_tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_edit_top_reverse"
        android:orientation="horizontal"
        android:paddingBottom="14.0dip"
        android:paddingTop="14.0dip" >

        <TextView
            android:id="@+id/nick_title"
            style="@style/userInfoItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="nick_title"
            android:text="选择时间 " />

        <TextView
            android:id="@+id/nick_content"
            style="@style/userInfoItemContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="nick_content"
            android:text="2014-5-10" />

        <ImageView
            style="@style/userInfoItemArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nick_tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/bg_edit_bottom_reverse"
        android:contentDescription="nick_tab"
        android:orientation="horizontal"
        android:paddingBottom="14.0dip"
        android:paddingTop="14.0dip" >

        <TextView
            android:id="@+id/nick_title"
            style="@style/userInfoItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="nick_title"
            android:text="设定电话" />

        <TextView
            android:id="@+id/nick_content"
            style="@style/userInfoItemContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-5-10" />

        <ImageView
            style="@style/userInfoItemArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/logout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:background="@drawable/bg_exit_selector"
        android:contentDescription="logout"
        android:gravity="center"
        android:paddingBottom="14.0dip"
        android:paddingTop="14.0dip"
        android:text="(￥128)购买"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>