<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_title"
        layout="@layout/unit_top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="15dp"
        android:background="@drawable/rect_radius_gray" >

        <EditText
            android:id="@+id/userinfo_intro_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textColor="#F35040"
            android:gravity="top|left"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <TextView
        android:id="@+id/userinfo_intro_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_bg_red"
        android:text="保 存"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="20sp" />

</LinearLayout>