<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/tv_type"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="5-25 12:00 - 5-26: 13:00"
            android:textColor="@color/black_80"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_person_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="5-8人"
            android:textColor="@color/black_80"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_person_count"
            android:text="北京市海淀区"
            android:textColor="@color/black_80"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="[校园招聘]"
            android:textColor="@color/red_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_type"
            android:text="我是标题"
            android:textColor="@color/red_text"
            android:textSize="18sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/iv_head"
            android:layout_marginTop="5dp"
            android:background="@color/gray_e8" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:drawableLeft="@drawable/ic_location"
            android:padding="10dp"
            android:text="北京市海淀区"
            android:textColor="@color/black_80"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/list_item_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_introduction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="活动介绍"
            android:textColor="@color/red_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_introduction_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_introduction_title"
            android:padding="10dp"
            android:text="介绍信息介绍信息介绍信息介绍信息介绍信息介绍信息介绍信息"
            android:textColor="@color/black_80"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/list_item_bg_bottom"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_introduction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="参与人员(7/8人)"
            android:textColor="@color/red_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_introduction_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_introduction_title"
            android:padding="10dp"
            android:text="介绍信息介绍信息介绍信息介绍信息介绍信息介绍信息介绍信息"
            android:textColor="@color/black_80"
            android:textSize="16sp" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_introduction_content"
            android:layout_marginTop="5dp"
            android:background="@color/gray_e8" />

        <TextView
            android:id="@+id/tv_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="交流活动"
            android:textColor="@color/red_text"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>