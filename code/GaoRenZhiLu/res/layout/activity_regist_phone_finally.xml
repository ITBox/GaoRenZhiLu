<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/unit_top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="密    码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/regist_phone_pass_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rectangle_radius_white"
            android:paddingLeft="5dp"
            android:textColor="@color/light_blue"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="昵    称"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/regist_phone_username_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rectangle_radius_white"
            android:paddingLeft="5dp"
            android:textColor="@color/light_blue"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="性    别"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/regist_phone_sex_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rectangle_radius_white"
            android:focusable="true"
            android:paddingLeft="5dp"
            android:textColor="@color/light_blue"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="生    日"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/regist_phone_birthday_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rectangle_radius_white"
            android:focusable="true"
            android:paddingLeft="5dp"
            android:textColor="@color/light_blue"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="所在地"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/regist_phone_area_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rectangle_radius_white"
            android:focusable="true"
            android:paddingLeft="5dp"
            android:textColor="@color/light_blue"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="类    型"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/regist_phone_type_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rectangle_radius_white"
            android:focusable="true"
            android:paddingLeft="5dp"
            android:textColor="@color/light_blue"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/regist_phone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/cell_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_blue_selector"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="注册"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>