<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="80dp"
        android:text="@string/app_name"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.itbox.fx.widget.CellView
        android:id="@+id/login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:minHeight="@dimen/cell_height"
        app:cellBgType="top"
        app:cellType="edit_text"
        app:leftText="用户名：" />

    <com.itbox.fx.widget.CellView
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:minHeight="@dimen/cell_height"
        app:cellBgType="bottom"
        app:cellType="edit_text"
        app:leftText="密　码：" />

    <Button
        android:id="@+id/login_login_bt"
		style="@style/button_blue"
        android:layout_marginTop="10dp"
        android:text="登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/login_find_pass_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="找回密码" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="　|　" />

        <TextView
            android:id="@+id/login_regist_pass_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="注册帐号" />
    </LinearLayout>

</LinearLayout>