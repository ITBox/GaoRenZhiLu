<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/unit_top_title" />

    <handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt_join"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@drawable/bt_blue_bg"
            android:text="我要报名"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_like"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:background="@drawable/bt_red_bg"
            android:text="感兴趣(10)"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_comment"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_join"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bt_orange_bg"
            android:text="活动交流"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>