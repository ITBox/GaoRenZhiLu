<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/unit_top_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/exam_bg" />

            <View
                android:id="@+id/icon_1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/bt_start_exam"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="85dp"
                android:background="@drawable/exam_list_icon" />

            <TextView
                android:id="@+id/text_1"
                style="@style/exam_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon_1"
                android:layout_toRightOf="@+id/icon_1"
                android:text="人才的发展需要对自我有足够的了解；" />

            <View
                android:id="@+id/icon_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/text_1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/exam_list_icon" />

            <TextView
                android:id="@+id/text_2"
                style="@style/exam_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon_2"
                android:layout_toRightOf="@+id/icon_2"
                android:text="人才的成长需要对职业生涯有清晰的定位；" />

            <View
                android:id="@+id/icon_3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/text_2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/exam_list_icon" />

            <TextView
                android:id="@+id/text_3"
                style="@style/exam_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon_3"
                android:layout_toRightOf="@+id/icon_3"
                android:text="高人指路测评，聚焦人才定位，精准组织人才配置；" />

            <View
                android:id="@+id/icon_4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/text_3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/exam_list_icon" />

            <TextView
                android:id="@+id/text_4"
                style="@style/exam_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon_4"
                android:layout_toRightOf="@+id/icon_4"
                android:text="本测评主要是让您更好的认识自我，了解自我，在此基础上为您提供专业的职场定位以及发展建议，助力于您的职业生涯规划；" />

            <View
                android:id="@+id/icon_5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/text_4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/exam_list_icon" />

            <TextView
                android:id="@+id/text_5"
                style="@style/exam_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon_5"
                android:layout_toRightOf="@+id/icon_5"
                android:text="请认真答题，在进行咨询时，老师将会参考您的测评结果，答题时，您只需要根据对每一题的第一印象，在符合的选项前选中即可。" />

            <Button
                android:id="@+id/bt_start_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/exam_start_bt_bg"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="开始测评"
                android:textColor="#224A7D"
                android:textSize="14sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>