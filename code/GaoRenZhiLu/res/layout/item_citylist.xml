<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical" >
	<TextView
		android:id="@+id/item_city_tv_alpha"
		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:paddingLeft="15dip"
  		android:paddingTop="5dp"
  		android:paddingBottom="5dp"
  		android:textSize="@dimen/textsize_text"
  		android:background="@color/gray_hover"
		android:textColor="@color/gray_text"
		android:visibility="visible" />
	
	<View style="@style/line_gray_h"
	    android:id="@+id/item_city_line" />
				
    <TextView
    	android:id="@+id/item_city_tv_name"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/draw_white_gray_selector"
    	android:textSize="@dimen/textsize_text"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:paddingLeft="20dp"
    	android:singleLine="true" />
    	
</LinearLayout>
