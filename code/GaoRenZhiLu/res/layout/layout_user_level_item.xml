<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dip" >

    <ImageView
        android:id="@+id/iv_level_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/tv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_level_icon"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_level_icon"
        android:text="张三"
        android:textColor="#E0564B"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_level_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_level_icon"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_level_icon"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_level_icon"
        android:layout_marginRight="10dip"
        android:textColor="#E0564B"
        android:textSize="14sp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_level_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip" />

</RelativeLayout>