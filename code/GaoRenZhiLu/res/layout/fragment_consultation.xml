<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/unit_top_title" />

    <FrameLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/search_bar_bg"
        android:padding="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bar_input_bg"
            android:clickable="false"
            android:padding="5dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:padding="5dp"
            android:text="搜索"
            android:textColor="@color/gray_text"
            android:textSize="16sp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/consulation_pic_1" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="专业迷茫问高人"
                        android:textColor="#E54631"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="职场专业精英为您排忧解惑"
                        android:textColor="#E54631"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_ask"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bt_red_bg"
                        android:gravity="center"
                        android:text="免费提问"
                        android:textColor="#ffffffff"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_radius_dark"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:text="指定高人咨询"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/consulation_pic_2"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_professional_teacher"
                    android:layout_width="76dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_red_bg"
                    android:gravity="center"
                    android:text="专业导师"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_human_resource_teacher"
                    android:layout_width="76dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/bt_blue_bg"
                    android:gravity="center"
                    android:text="人力导师"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_radius_dark"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:text="按行业咨询"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <com.itbox.grzl.ui.GridViewNoScroll
                android:id="@+id/gv_jobtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="10dip"
                android:listSelector="@drawable/empty_list_selector"
                android:numColumns="3"
                android:verticalSpacing="6dip" >
            </com.itbox.grzl.ui.GridViewNoScroll>
        </LinearLayout>
    </ScrollView>

</LinearLayout>