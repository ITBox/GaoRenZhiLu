<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/unit_top_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dip"
                android:orientation="horizontal" >

                <com.itbox.fx.widget.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="96dip"
                    android:layout_height="96dip"
                    android:layout_margin="10dip" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张三"
                            android:textColor="#E95C4A"
                            android:textSize="16sp" />

                        <RatingBar
                            android:id="@+id/ratingbar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/tv_jobtype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="张三"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_teachertype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dip"
                            android:text="张三"
                            android:textColor="#A3A7AA"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_teacher_description"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="哈哈哈哈哈"
                        android:textColor="#A3A7AA"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_buy_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张三"
                            android:textColor="#A3A7AA"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_answer_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="张三"
                            android:textColor="#A3A7AA"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="#E7E7E7"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:text="咨询服务"
                android:textColor="#838383"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_picture_consultation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="96dip"
                    android:layout_height="96dip"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/pic_consultation" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_picture_consultation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="图文咨询"
                        android:textColor="#E95C4A"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray_e4"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="通过文字、图片、语音进行咨询专业导师"
                        android:textColor="#A3A7AA"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@drawable/custom_tab_indicator_divider" />

            <LinearLayout
                android:id="@+id/ll_phone_consultation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="96dip"
                    android:layout_height="96dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/phone_consultation" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_phone_consultation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话资讯"
                        android:textColor="#E95C4A"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray_e4"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="通过电话进行咨询专业导师"
                        android:textColor="#A3A7AA"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@drawable/custom_tab_indicator_divider" />

            <LinearLayout
                android:id="@+id/ll_my_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="96dip"
                    android:layout_height="96dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/my_course" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_my_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的课程"
                        android:textColor="#E95C4A"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray_e4"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="查看导师发起的课程"
                        android:textColor="#A3A7AA"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@drawable/custom_tab_indicator_divider" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>