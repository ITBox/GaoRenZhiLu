<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/unit_top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="订单号"
                android:textColor="@color/dark"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/tv_id"
                style="@style/text_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123213123" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray_e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="提现报名"
                android:textColor="@color/dark"
                android:textSize="18sp" >
            </TextView>

            <TextView
                style="@style/text_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="申请提现" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray_e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="金额"
                android:textColor="@color/dark"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/tv_price"
                style="@style/text_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="680元" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray_e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="提款时间"
                android:textColor="@color/dark"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2014.12.2 12:00" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray_e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="提款状态"
                android:textColor="@color/dark"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/tv_status"
                style="@style/text_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提款失败" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray_e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="提款备注"
                android:textColor="@color/dark"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/bg_white_radius"
                android:padding="5dp"
                android:text="提款备注提款备注提款备注提款备注提款备注提款备注提款备注提款备注"
                android:textColor="@color/gray_text"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_cancel"
            style="@style/bottom_red_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="取消提款" />
    </LinearLayout>

</LinearLayout>